{
  "manifest_version": 3,
  "name": "ScriptFlow",
  "version": "1.0.0",
  "description": "Modern AI-augmented replacement for Tampermonkey - Advanced userscript management with intelligent features",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "webNavigation",
    "contextMenus",
    "notifications",
    "alarms"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "dist/background/service_worker.js",
    "type": "module"
  },
  
  "action": {
    "default_popup": "dist/popup/index.html",
    "default_title": "ScriptFlow",
    "default_icon": {
      "16": "public/icons/icon-16.png",
      "32": "public/icons/icon-32.png",
      "48": "public/icons/icon-48.png",
      "128": "public/icons/icon-128.png"
    }
  },
  
  "options_page": "dist/options/index.html",
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content/scripts/content.js"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "dist/content/injections/*",
        "dist/lib/*",
        "public/icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "icons": {
    "16": "public/icons/icon-16.png",
    "32": "public/icons/icon-32.png",
    "48": "public/icons/icon-48.png",
    "128": "public/icons/icon-128.png"
  },
  
  "commands": {
    "toggle-scriptflow": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Toggle ScriptFlow on current tab"
    },
    "open-dashboard": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "Command+Shift+D"
      },
      "description": "Open ScriptFlow dashboard"
    }
  },
  
  "minimum_chrome_version": "88"
}